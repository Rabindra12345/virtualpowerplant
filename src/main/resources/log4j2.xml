<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="layout">%d [%t] %-5level %logger - %m%n</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${layout}" />
        </Console>
        <!--        <File name="appLog" fileName="/home/rabindra-jar/springboot/logpath/LogFile.log">-->
        <RollingFile name="appLog" fileName="/home/rabindra-jar/springboot/virtualpowerplantlog/virtualpowerplant.log"
                     filePattern="/home/rabindra-jar/springboot/virtualpowerplantlog/virtualpowerplant-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <!--        </File>-->
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.baldur" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="appLog" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
